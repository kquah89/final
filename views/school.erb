<div class="row">
    <div class="col-sm-9">

        <h1><%= @school[:title] %></h1>
        <p><%= @school[:description] %></p>
        <% for review in @reviews %>
            <% user = @users_table.where(:id => review[:user_id]).to_a[0] %>
            <div class="media">
                <% if review[:going] %>
                    <i class="fas fa-thumbs-up fa-3x mr-3"></i>
                <% else %>
                    <i class="fas fa-thumbs-down fa-3x mr-3"></i>
                <% end %>
                <div class="media-body">
                    <h5 class="mt-0"><%= user[:name] %></h5>
                    <%= review[:comments] %>
                </div>
            </div>
        <% end %>
        <p class="mt-5">
            <a href="/schools/<%= @school[:id] %>/reviews/new" class="btn btn-primary">Write a review</a>
        </p>
    </div>
    <div class="col-sm-3">
        <h3>When?</h3>
        <p><%= @school[:date] %></p>
        <h3>Address</h3>
        <p><%= @school[:location] %></p>
        <iframe
  width="600"
  height="450"
  frameborder="0" 
  style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyCtovsQvkIUWlNqtYwXY87gEd4ZSmJEhMw&q=<%= @lat_long %>&zoom=6" allowfullscreen>
</iframe>
        <h3>Number of reviews</h3>
        <p><%= @count %></p>
    </div>
</div>